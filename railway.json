{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run postinstall && npm run build"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false,
    "watchPatterns": [
      {
        "path": "server/",
        "include": ["**/*.js", "**/*.json"],
        "exclude": ["node_modules/"]
      }
    ]
  }
}